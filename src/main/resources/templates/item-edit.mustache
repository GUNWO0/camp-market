<h1>✏️ 물품 수정</h1>

<form method="post" action="/items/{{id}}/edit">
    <label>제목</label><br/>
    <input type="text" name="title" value="{{title}}" required><br/><br/>

    <label>가격</label><br/>
    <input type="number" name="price" value="{{price}}" required><br/><br/>

    <label>상태</label><br/>
    <select name="status">
        <option value="ON_SALE" {{#isOnSale}}selected{{/isOnSale}}>판매중</option>
        <option value="RESERVED" {{#isReserved}}selected{{/isReserved}}>예약중</option>
        <option value="SOLD_OUT" {{#isSoldOut}}selected{{/isSoldOut}}>판매완료</option>
    </select><br/><br/>

    <label>설명</label><br/>
    <textarea name="description" required>{{description}}</textarea><br/><br/>

    <button type="submit">💾 저장</button>
</form>

<br/>
<a href="/items/{{id}}">🔙 돌아가기</a>
